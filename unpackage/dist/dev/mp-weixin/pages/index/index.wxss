
.tab {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.tab-nav {
	height: 80rpx;
	background: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	line-height: 79rpx;
	position: relative;
}
.tab-navA {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.tab-line {
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #FF0000;
	-webkit-transition: all 0.3s;
	transition: all 0.3s;
}
.tab-content {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	overflow-y: auto;
	overflow-x: hidden;
}
.input {
	position: fixed;
	top: 0;
	width: 100%;
	z-index: 9999;
	padding-bottom: 1rem;
	padding-top: 4rem;
}
.input>input,
.input>text:first-child {
	float: left;
	margin-left: 0.5rem;
}
.input>input {
	width: 65%;
	border: #C0C0C0 2rpx solid;
	border-radius: 3rem;
	padding-left: 0.5rem;
}
.uni-padding-wrap swiper-item>view {
	width: 100%;
	height: 6.5rem;
}
.input>text:last-child {
	float: right;
}
swiper {
	height: calc(93vw*5/5)
}
.nav {
	width: 100%;
	height: 5rem;
}
.nav>view {
	width: 18%;
	height: 100%;
	float: left;
	margin-left: 1.5%;
}
.nav image {
	width: 100%;
	height: 100%;
}

