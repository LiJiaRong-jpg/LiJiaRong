
.horizonal-tab {
	height: 7vh;
}
.horizonal-tab .active {
	color: red;
}
.scroll-tab {
	white-space: nowrap;
	/* 必要，导航栏才能横向*/
	border-bottom: 1rpx solid #eee;
	text-align: center;
}
.scroll-tab-item {
	display: inline-block;
	/* 必要，导航栏才能横向*/
	margin: 20rpx 30rpx 0 30rpx;
}
.active .scroll-tab-line {
	border-bottom: 5rpx solid red;
	border-top: 5rpx solid red;
	border-radius: 20rpx;
	width: 70rpx;
}

